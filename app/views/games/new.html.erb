<h1>New Game</h1>

<div>
<ul class="list-inline">
<% @letters.each do |letter| %>
<li style = 'background-color: #4097da'><%= letter %></li>
<% end %>
</ul>
</div>

<form action="score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input name="letters" type="hidden" value="<%=@letters.join%>" />
  <input type="text" name="word" placeholder="Type longest word">
  <input type="submit">
</form>
